<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous" />
    <link rel="icon" href="data:," />
    <title>Proyecto Final</title>
  </head>
  <body style="background-color: rgb(178, 247, 224)">
    <%- include("templates/navbar") %>
    
    <div class="container mt-3 mb-3 pt-3 pb-3 bg-light d-flex" id="cartContainer">
      <p>hello! this is cart <%= cartId %></p>
      
      <% userCartProducts.forEach((product) => { %>
        <div class="card" style="width: 18rem; margin: 1rem">
          <img src="<%= product.thumbnail %>" class="card-img-top" alt="<%= product.code %>" />
          <div
            style="text-align: center; background-color: rgb(168, 160, 160)"
            class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description%></p>
            <p class="btn btn-primary">$<%= product.price %></p>
            <form action="/api/carrito/<%= cartId %>/productos/<%= product._id %>" method="post">
              <button class="btn btn-danger" name="addToCart" value="addToCart" type="submit"> X </button>
            </form>
          </div>
        </div>
        <% }) %>

        <p>Cantidad de productos: </p>
        <p>Monto total: $</p>

        <button class="btn btn-success" onclick="pedido()">Realizar pedido</button>
    </div>

    <script>
      function redirect(pagina) {
        location.href = pagina;
      }
      function logout() {
        redirect("/logout");
      }
      function pedido() {
        redirect("/api/carrito/<%= cartId %>/success")
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"></script>
  </body>
</html>