  <body style="background-color: rgb(178, 247, 224)">
    <%- include("templates/navbar") %>

    <div class="container mt-3 pb-3 bg-light">
      <h1>PÃ¡gina principal</h1>
      <div id="userWelcome">
        <h2 class="mt-4">Welcome <%= name %></h2>
        <img style="width: 200px" src="<%= imageUrl %>" alt="profilePic" class="img-thumbnail rounded" />
      </div>

      <div style="display: flex">
        <div style="margin: 0 auto">
          <h2 style="color: blue; text-align: center">Centro de Mensajes</h2>
          <ul id="messagePool"></ul>

          <form id="formMessage" style="margin-top: 50px; padding-bottom: 25px">
            <input id="usernameInput" type="email" placeholder="Ingrese su email"/>
            <input id="messageInput" type="text" placeholder="Mensaje" />
            <input type="submit" value="Enviar" />
          </form>
        </div>
      </div>
    </div>
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/scripts/client.socket.js"></script>
    <script>
      function redirect(pagina) {
        location.href = pagina;
      }
      function logout() {
        redirect("/logout");
      }
    </script>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
